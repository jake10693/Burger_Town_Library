<h1>Eat Da Burger</h1>

<h2>Burgers not eaten</h2>

<ul>
    {{#each burger}}
     {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
     {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
    {{#each burger}}
     {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
     {{/if}}
    {{/each}}
</ul>

<h2>Make a burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bu">Kind of Burger</label>
        <input type="text" id="bu" name="kind">
    </div>

    <div class="form-group">
        <label for="eat">Eaten?</label><br>
        <input type="radio" name="eaten" value="1">
        <input type="radio" name="eaten" value="0">
    </div>
    <button type="submit">Make Burger</button>
</form>