<div class="columns">
    <div class="column">
        <h2>Burgers not Eaten</h2>
        {{!-- h2 centered --}}
        <ul>
            {{#each burgers}}
             {{#unless eaten}}
                <li class="yellow-bg">
                    {{name}}

                    <button class="change-eaten" data-id="{{id}}" data-neweaten="{{eaten}}">
                    {{#unless eaten}}EAT UP!{{else}}YUM!{{/unless}}
                    </button>
                </li>
             {{/unless}}
            {{/each}}
        </ul>     
    </div>
    <div class="column">
    <h2>Make a burger</h2>
    {{!-- h2 centered --}}
        <form class="create-form">
            <div class="form-group">
                <label for="bu">Kind of Burger</label>
                <input type="text" id="bu" name="kind">
            </div>

            <div class="form-group">
                <label for="eat"></label>
                <br>
                <input class="hide" type="radio" name="eaten" value="0" checked> 
                <br>
                <input class="hide" type="radio" name="eaten" value="1" >
            </div>
            <button type="submit">Make Burger</button>
        </form>
    </div>
    <div class="column">
    <h2>Burgers Eaten</h2>
    {{!-- h2 centered --}}
        <ul>
            {{#each burgers}}
             {{#if eaten}}
            <li class="orange-bg">
                {{name}}
                    {{#if eaten}}YUM!{{else}}EAT UP!{{/if}}
            </li>
             {{/if}}
            {{/each}}
        </ul>
       <button class="empty-trash"></button>
    </div>
</div>
